{
  "database": {
    "rules": "database.rules.bolt"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/image",
        "functions": "image"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
