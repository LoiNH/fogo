{
  "name": "@quiver/fogo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build":
      "rm -rf build && preact build --template template.html --no-prerender && cp manifest.json build/manifest.json && cp assets/icon.png build/assets/icon.png",
    "serve": "preact build --template template.html --no-prerender && preact serve",
    "dev": "preact watch --template template.html",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "deploy": "yarn build && firebase deploy",
    "deploy:database": "firebase deploy --only database",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "yarn build && firebase deploy --only hosting",
    "deploy:storage": "firebase deploy --only storage",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": ["build/*"],
  "devDependencies": {
    "babel-plugin-fast-async": "^6.1.2",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "preact-cli": "^2.0.0",
    "uglifyjs-webpack-plugin": "^1.1.5"
  },
  "dependencies": {
    "@quiver/firebase-authentication": "^0.0.2",
    "@quiver/storage-uploader": "^0.0.2",
    "@reactivex/rxjs": "^5.5.3",
    "axios": "^0.17.1",
    "linkstate": "^1.1.0",
    "node-sass": "^4.7.2",
    "preact": "^8.2.1",
    "preact-cli-plugin-async": "^1.0.0",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.3.2",
    "preact-router": "^2.6.0",
    "sass-loader": "^6.0.6",
    "unistore": "^2.4.0"
  },
  "jest": {
    "roots": ["src"]
  },
  "private": true
}
